<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_empty_reservations"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/frowny_smile"
            android:layout_gravity="center"
            android:alpha="127" />

        <TextView
            android:text="@string/empty_reservations_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin"
            android:id="@+id/no_reservations_title"
            android:textAlignment="center"
            tools:text="No Reservations yet"
            android:textAppearance="@android:style/TextAppearance.Holo.Large" />

        <TextView
            android:text="@string/empty_reservations_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:id="@+id/no_reservations_hint"
            android:textAlignment="center"
            tools:text="Click on a gadget in the Gadgets Tab to add a reservation"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium" />
    </LinearLayout>
</RelativeLayout>